{% set tracking = app.request.cookies.get('cookie_policy')
%}<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
  <title>{% block title %}{{ 'app.title'|trans }}{% endblock %}</title>
  <meta charset="utf-8" />
  <meta name="title" content="{{ block('title') }}" />
  <meta name="description" content="{{ 'app.meta.description'|trans }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% include 'shared/icon.html.twig' %}

  {% block meta_og %}{% endblock %}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/interface/default/css/main.css">

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

</head>
<body>

<div class="container-fluid d-lg-none text-center sticky-top" id="mobile-movie-support-top-bar">
  <a href="{{ path('movie_home') }}">ðŸŽ¬ Support the making of the RTA Speedbuilding movie!</a>
</div>

<header>

<div class="container-fluid d-none d-lg-block text-center" id="desktop-movie-support-top-bar">
  <a href="{{ path('movie_home') }}">ðŸŽ¬ Support the making of the RTA Speedbuilding movie!</a>
  <a href="{{ path('movie_home') }}" class="btn btn-info">Discover</a>
</div>

<div class="container d-none d-lg-block text-center mt-3 head-sign">
<a href="{{ path('home') }}">
{% include 'svg/rtaswc-logo.svg.twig' with {id: 'rtaswc-logo'}%}
<h1>Ready-to-Assemble Speedbuilding World Community</h1>
</a>
</div>

{% include 'shared/menu.html.twig' %}
</header>

<main class="container mt-5" id="{{ page is defined ? page }}">

<section id="flash-messages" class="row">
{% set classes = {notice: 'info', success: 'success', error: 'danger'}  %}
{% for type,flashes in app.session.flashBag.all %}
  {% set class = attribute(classes, type) %}
  {% for flash in flashes %}
  <div class="col">
    <div class="alert alert-{{ class }} alert-dismissible fade show" role="alert">
      {{ flash|trans|raw }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  {% endfor %}
{% endfor %}
</section>

{% block payload %}{% endblock %}

</main>

{% include 'shared/footer.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
