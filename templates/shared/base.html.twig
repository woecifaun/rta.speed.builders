{% set tracking = app.request.cookies.get('cookie_policy')
%}<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
  <title>{% block title %}{{ 'app.title'|trans }}{% endblock %}</title>
  <meta charset="utf-8" />
  <meta name="title" content="{{ block('title') }}" />
  <meta name="description" content="{{ 'app.meta.description'|trans }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% include 'shared/icon.html.twig' %}

  {% block meta_og %}{% endblock %}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/interface/default/css/main.css">

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

</head>
<body>

{% include 'shared/menu.html.twig' %}

<main class="container">


<section id="flash-messages" class="row">
{% set classes = {'success': 'success', 'error': 'danger'}  %}
{% for type,flashes in app.session.flashBag.all %}
  {% set class = attribute(classes, type) %}
  {% for flash in flashes %}
  <div class="alert alert-{{ class }} alert-dismissible fade show col" role="alert">
    {{ flash|trans }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {% endfor %}
{% endfor %}
</section>

<section id="payload">
  {% block payload %}{% endblock %}
</section>

</main>

{% include 'shared/footer.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
