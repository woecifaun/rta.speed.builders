{% set page = 'assembly' %}

{% extends 'shared/base.html.twig' %}

{% block title %}{{ 'furniture.brand.add'|trans }}{% endblock %}

{% block payload %}
{% set config = {display_poster: true} %}


<section class="container">
  <form method="post">
    <fieldset class="form-row">
      <div class="form-group">
      <legend>Select the {{ brand.name }} model: </legend>
      {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.model) }}
      </div>
    </fieldset>
  {{ form_end(form) }}
</section>

{% endblock %}
