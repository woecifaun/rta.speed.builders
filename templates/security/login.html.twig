{% set page = 'user' %}

{% extends 'shared/base.html.twig' %}

{% block title %}RTA Speedbuilders - Log In{% endblock %}

{% block payload %}
<section>
  <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('security_logout') }}">Logout</a>
      </div>
    {% endif %}

    <h2 class="page-h2 mb-3 font-weight-normal">Please sign in</h2>
    <label for="username">Email Address</label>
    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
    <label for="password">Password</label>
    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>


    <div class="checkbox mb-3">
      <input type="checkbox" name="_remember_me" id="_remember_me">
      <label for="_remember_me">Remember me</label>
    </div>


    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-info btn-rtaswc" type="submit">Sign in</button>
  </form>
</section>
{% endblock %}
